<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TransPenjFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal          : "
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/autotgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/kdbrg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Kode Barang  : "
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvkdbrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/namabrg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Barang : "
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/edtTextnamabrg"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnLihat"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:text="Lihat"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/hrgbrg"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Harga Barang : Rp."
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvhrgbrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jmlbeli"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Jumlah beli     :"
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/edtTextjmlbeli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/stoktsd"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Stok tersedia   :"
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvstoktsd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/stoksisa"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="Stok sisa barang  :"
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvstoksisa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="30dp"
                android:background="@android:color/holo_blue_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Total                 : Rp."
                    android:textStyle="bold"
                    android:textColor="@color/steelblue"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCek"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Cek"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/btnProses"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:text="Proses"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHapus"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:text="Hapus"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_bg"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>